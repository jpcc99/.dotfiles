# Utilities
alias sysctl="sudo systemctl"
alias usrctl="systemctl --user"
alias spacman="sudo pacman"
alias rm-orphan='sudo pacman -Rs $(pacman -Qdt | grep "^[^ ]+")'
alias icat="kitty +kitten icat"
alias calendar="zenity --calendar"
alias dotfiles='/usr/bin/git --git-dir=$HOME/.dotfiles --work-tree=/home/$USER'
alias aur='/bin/zsh $HOME/.scripts/aur_download.zsh'
alias fzf='fzf --height 40% --reverse'
alias op='xdg-open'

# Color
alias ls="ls -hN --color=auto --group-directories-first"
alias grep="grep --color=auto"

# Prefered apps
alias -s {c,cpp,rs,java,py,js,css,html,xml,txt,tex}=nvim
