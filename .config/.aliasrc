# Utilities
alias sysctl="sudo systemctl"
alias usrctl="systemctl --user"
alias spacman="sudo pacman"
alias rm-orphan='sudo pacman -Rs $(pacman -Qdt | grep "^[^ ]+")'
alias icat="kitty +kitten icat"
alias calendar="zenity --calendar"
alias dotfiles='/usr/bin/git --git-dir=/home/jp/.dotfiles --work-tree=/home/jp'

# Color
alias ls="ls -hN --color=auto --group-directories-first"
alias grep="grep --color=auto"

# Prefered apps
alias -s {c,cc,cpp,rs,js,ts,css,html,txt}=nvim	
